<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>音乐练习</title>
	<style>
		body {
			text-align: center;
			margin-top: 100px;
			font-size: 30px;
			font-weight: bold;
			font-family: Arial, sans-serif;
		}
		button {
			margin: 20px;
			padding: 10px 20px;
			font-size: 24px;
			font-weight: bold;
			background-color: #007bff;
			color: white;
			border-radius: 10px;
			border: none;
			cursor: pointer;
		}
		button:hover {
			background-color: #0062cc;
		}
	</style>
</head>
<body>
	<h1>音乐练习</h1>
	<p id="randomNumber"></p>
	<p id="musicNote"></p>
	<button onclick="generateRandomNumber()">生成随机数</button>
	<button onclick="generateMusicNote()">生成唱名</button>

	<script>
		var randomNumber = null;

		// 生成随机数
		function generateRandomNumber() {
			randomNumber = Math.floor(Math.random() * 7) + 1;
			document.getElementById("randomNumber").innerHTML = "随机数：" + randomNumber;
			return randomNumber;
		}

		// 生成唱名
		function generateMusicNote() {
			if (randomNumber === null) {
				document.getElementById("musicNote").innerHTML = "请先生成随机数！";
			} else {
				var musicNote = "";
				switch(randomNumber) {
					case 1:
						musicNote = "do";
						break;
					case 2:
						musicNote = "re";
						break;
					case 3:
						musicNote = "mi";
						break;
					case 4:
						musicNote = "fa";
						break;
					case 5:
						musicNote = "so";
						break;
					case 6:
						musicNote = "la";
						break;
					case 7:
						musicNote = "ti";
						break;
				}
				document.getElementById("musicNote").innerHTML = "唱名：" + musicNote;
			}
		}
	</script>
</body>
</html>
